@startuml

!define CLASS class
!define PROTECTED #protected
!define PRIVATE #private
!define PUBLIC #public

skinparam class {
  BackgroundColor White
  BorderColor Black
  ArrowColor Black
}

skinparam shadowing false

CLASS User {
  {field} PROTECTED fio : string
  {field} PROTECTED faculty : string
  {field} PROTECTED groupNum : int

  {method} PUBLIC User()
  {method} PUBLIC User(string, string, int)
  {method} PUBLIC User(const User&)
  {method} PUBLIC getFio() : string
  {method} PUBLIC getFaculty() : string
  {method} PUBLIC getGroupNum() : int
  {method} PUBLIC setFio(const string&) : void
  {method} PUBLIC setFaculty(const string&) : void
  {method} PUBLIC setGroupNum(int) : void
}

CLASS Answer {
  {field} PROTECTED date : int

  {method} PUBLIC Answer()
  {method} PUBLIC Answer(const string&, const string&, int, int)
  {method} PUBLIC Answer(const Answer&)
  {method} PUBLIC getDate() : int
  {method} PUBLIC setDate(int) : void
}

CLASS Question {
  {field} PRIVATE questionText : string
  {field} PRIVATE variants : string
  {field} PRIVATE rightVariant : string
  {field} PRIVATE scores : int

  {method} PUBLIC Question()
  {method} PUBLIC Question(string, string, string, int)
  {method} PUBLIC Question(const Question&)
  {method} PUBLIC getQuestionText() : string
  {method} PUBLIC getVariants() : string
  {method} PUBLIC getRightVariant() : string
  {method} PUBLIC getScores() : int
  {method} PUBLIC setQuestionText(string&&) : void
  {method} PUBLIC setVariants(const string&) : void
  {method} PUBLIC setRightVariant(const string&) : void
  {method} PUBLIC setScores(int) : void
}

CLASS Result {
  {field} PRIVATE result : float
  {field} PRIVATE passed : bool

  {method} PUBLIC Result()
  {method} PUBLIC Result(const string&, const string&, int, int, float)
  {method} PUBLIC Result(const Result&)
  {method} PUBLIC getResult() : float
  {method} PUBLIC getPassed() : bool
  {method} PUBLIC setResult(float) : void
  {method} PUBLIC setPassed(bool) : void
}

CLASS Test {
  {field} PRIVATE MAX_QUESTIONS : static const int = 100
  {field} PRIVATE MAX_ANSWERS : static const int = 1000
  {field} PRIVATE testName : string
  {field} PRIVATE testTheme : string
  {field} PRIVATE questions : Question[MAX_QUESTIONS]
  {field} PRIVATE answers : Answer[MAX_ANSWERS]
  {field} PRIVATE questionCount : int
  {field} PRIVATE answerCount : int

  {method} PUBLIC Test()
  {method} PUBLIC Test(string, string)
  {method} PUBLIC Test(const Test&)
  {method} PUBLIC getTestName() : string
  {method} PUBLIC getTestTheme() : string
  {method} PUBLIC getQuestionCount() : int
  {method} PUBLIC getAnswerCount() : int
  {method} PUBLIC setTestName(string) : void
  {method} PUBLIC setTestTheme(string) : void
  {method} PUBLIC setQuestionCount(int) : void
  {method} PUBLIC setAnswerCount(int) : void
}

' Наследование
Answer --|> User
Result --|> Answer

' Композиция (Test содержит Questions и Answers)
Test *-- "many" Question : questions
Test *-- "many" Answer : answers

' Ассоциации
Test --> "0..*" Result : produces
Answer --> "1..*" Question : answers to

note top of Test
  Содержит массивы вопросов и ответов
  MAX_QUESTIONS = 100
  MAX_ANSWERS = 1000
end note

note right of User
  Базовый класс для информации
  о пользователе
end note

note right of Answer
  Наследует от User
  Добавляет дату выполнения теста
end note

note right of Result
  Наследует от Answer
  Добавляет результат и статус сдачи
end note

@enduml